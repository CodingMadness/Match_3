<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>11</LangVersion>
  </PropertyGroup>
  <PropertyGroup>
    <PublishTrimmed>true</PublishTrimmed>
    <PublishSingleFile>true</PublishSingleFile>
    <PublishSelfContained>true</PublishSelfContained>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
  </PropertyGroup>
<PropertyGroup> 
  <EnablePreviewFeatures>true</EnablePreviewFeatures>
  <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
</PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' " />
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <WarningsAsErrors>;NU1605;Nullable</WarningsAsErrors>
    <NoWarn>1701;1702;Nullable</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="raylib" />
    <None Remove="Raylib-cs" />
    <None Remove="Microsoft.Extensions.Logging.Abstractions" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2022.1.0" />
    <PackageReference Include="Raylib-CsLo" Version="4.2.0.3" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Extension.cs" />
    <Compile Remove="ProbabilityPool.cs" />
    <Compile Remove="FadeableColour.cs" />
    <None Remove="Assets\fonts\font.otf" />
    <EmbeddedResource Include="Assets\fonts\font.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\fonts\font2.otf" />
    <EmbeddedResource Include="Assets\fonts\font2.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\fonts\font3.ttf" />
    <EmbeddedResource Include="Assets\fonts\font3.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\fonts\font4.otf" />
    <EmbeddedResource Include="Assets\fonts\font4.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\fonts\font5.otf" />
    <EmbeddedResource Include="Assets\fonts\font5.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\spritesheets\set1.png" />
    <EmbeddedResource Include="Assets\spritesheets\set1.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\spritesheets\set2.png" />
    <EmbeddedResource Include="Assets\spritesheets\set2.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\spritesheets\shapes.png" />
    <EmbeddedResource Include="Assets\spritesheets\shapes.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>
</Project>
