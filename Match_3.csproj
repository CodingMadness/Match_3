<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>11</LangVersion>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <PropertyGroup>
    <PublishTrimmed>true</PublishTrimmed>
    <PublishSingleFile>true</PublishSingleFile>
    <PublishSelfContained>true</PublishSelfContained>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <LangVersion>preview</LangVersion>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <WarningsAsErrors>;NU1605;Nullable</WarningsAsErrors>
    <NoWarn>1701;1702;Nullable</NoWarn>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="raylib" />
    <None Remove="Raylib-cs" />
    <None Remove="Microsoft.Extensions.Logging.Abstractions" />
    <None Remove="Assets\SpriteSheets\Easter_UI\**" />
    <None Remove="Assets\SpriteSheets\Super_Match3_Bundle\**" />
    <None Remove="Assets\Atlas\set1.png" />
    <None Remove="Assets\Fonts\font1.otf" />
    <None Remove="Assets\Fonts\font2.otf" />
    <None Remove="Assets\Fonts\font3.otf" />
    <None Remove="Assets\Fonts\font4.otf" />
    <None Remove="Assets\Atlas\set1.png" />
    <None Remove="Assets\Atlas\set2.png" />
    <None Remove="Assets\Atlas\set3.png" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ImGui.NET" Version="1.87.3" />
    <PackageReference Include="JetBrains.Annotations" Version="2022.1.0" />
    <PackageReference Include="Raylib-CsLo" Version="4.2.0.3" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Extension.cs" />
    <Compile Remove="ProbabilityPool.cs" />
    <Compile Remove="FadeableColour.cs" />
    <None Remove="Assets\spritesheets\shapes.png" />
    <Compile Remove="Assets\SpriteSheets\Easter_UI\**" />
    <EmbeddedResource Remove="Assets\SpriteSheets\Easter_UI\**" />
    <Compile Remove="Assets\SpriteSheets\Super_Match3_Bundle\**" />
    <EmbeddedResource Remove="Assets\SpriteSheets\Super_Match3_Bundle\**" />
    <None Remove="Assets\Atlas\bg.png" />
    <EmbeddedResource Include="Assets\Atlas\bg.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <Compile Remove="QuestHandler.cs" />
    <None Remove="Assets\Atlas\set1 Kopie.png" />
    <EmbeddedResource Include="Assets\Atlas\set1_small.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\Atlas\bg2.png" />
    <EmbeddedResource Include="Assets\Atlas\bg2.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\Atlas\bg3.png" />
    <None Remove="Assets\Atlas\bg_3.png" />
    <EmbeddedResource Include="Assets\Atlas\bg_3.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\Atlas\bg4.png" />
    <None Remove="Assets\Atlas\image.png" />
    <EmbeddedResource Include="Assets\Atlas\image.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <None Remove="Assets\Atlas\set2_small.png" />
    <EmbeddedResource Include="Assets\Atlas\set2_small.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Assets\Fonts\font1.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets\Fonts\font2.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets\Fonts\font3.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets\Fonts\font4.otf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets\Atlas\set1.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets\Atlas\set2.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets\Atlas\set3.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="rlImGui">
      <HintPath>bin\Debug\net7.0\rlImGui.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>
